{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "allowUnreachableCode": false,
    "target": "ES2020",
    "module": "nodenext",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "isolatedModules": true,
    "paths": {
      "@app/*": ["src/*"]
    }
  }
}
